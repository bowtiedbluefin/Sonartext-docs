{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Sonartext API Documentation",
  "colors": {
    "primary": "#2563EB",
    "light": "#3B82F6",
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "openapi": "../sonartext/sonartext-API/openapi.yaml",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/uploads",
              "guides/transcription",
              "guides/text-to-speech",
              "guides/rate-limits"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "System",
            "pages": [
              "api-reference/system/health"
            ]
          },
          {
            "group": "Authentication",
            "pages": [
              "api-reference/auth/upload-token"
            ]
          },
          {
            "group": "Uploads",
            "pages": [
              "api-reference/uploads/initiate",
              "api-reference/uploads/complete", 
              "api-reference/uploads/abort",
              "api-reference/uploads/status"
            ]
          },
          {
            "group": "Transcription",
            "pages": [
              "api-reference/transcription/transcriptions"
            ]
          },
          {
            "group": "Text-to-Speech",
            "pages": [
              "api-reference/tts/speech"
            ]
          },
          {
            "group": "Jobs",
            "pages": [
              "api-reference/jobs/list",
              "api-reference/jobs/get",
              "api-reference/jobs/cancel",
              "api-reference/jobs/result",
              "api-reference/jobs/stats"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.sonartext.com",
          "icon": "chart-line"
        },
        {
          "anchor": "Support",
          "href": "https://sonartext.com/support",
          "icon": "messages-question"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/sonartext",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://app.sonartext.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://app.sonartext.com/keys"
    }
  },
  "api": {
    "baseUrl": "https://api.sonartext.com",
    "auth": {
      "method": "bearer",
      "name": "Authorization",
      "inputPrefix": "stx_live_"
    },
    "playground": {
      "mode": "show"
    },
    "maintainOrder": true
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/sonartext",
      "github": "https://github.com/sonartext",
      "website": "https://sonartext.com"
    }
  }
}